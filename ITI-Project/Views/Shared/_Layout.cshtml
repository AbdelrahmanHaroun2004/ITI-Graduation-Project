<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITI</title>

    <!-- Bootstrap CSS -->
    <link rel="icon" type="image/png" href="~/Images/ITIProject.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITI_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- ✅ Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 border-bottom">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold fs-4 text-primary d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill"></i> ITI Training System
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 fw-semibold">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Course" asp-action="Index">Courses</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Session" asp-action="Index">Sessions</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="Index">Users</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Grade" asp-action="Index">Grades</a></li>
                    </ul>

                    <!-- Buttons -->
                    <div class="d-flex ms-lg-3 mt-3 mt-lg-0">
                        <a href="#" class="btn btn-outline-primary rounded-pill me-2 px-4">Login</a>
                        <a href="#" class="btn btn-primary rounded-pill px-4 fw-bold">Sign Up</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Main Content -->
    <main class="flex-grow-1">
        <div class="container py-5">
            @RenderBody()
        </div>
    </main>

    <!-- ✅ Footer -->
    <footer class="bg-primary text-white mt-auto">
        <div class="container py-5">
            <div class="row gy-4">
                <!-- About -->
                <div class="col-lg-6 col-md-12">
                    <h5 class="fw-bold mb-3">ITI Project</h5>
                    <p class="mb-0">
                        A professional Training Management System to organize Courses, Sessions, Users, and Grades efficiently.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Course" asp-action="Index" class="text-white text-decoration-none">Courses</a></li>
                        <li><a asp-controller="Session" asp-action="Index" class="text-white text-decoration-none">Sessions</a></li>
                        <li><a asp-controller="User" asp-action="Index" class="text-white text-decoration-none">Users</a></li>
                        <li><a asp-controller="Grade" asp-action="Index" class="text-white text-decoration-none">Grades</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold mb-3">Contact</h6>
                    <p class="mb-1"><i class="bi bi-envelope me-2"></i> support@itiproject.com</p>
                    <p><i class="bi bi-telephone me-2"></i> +20 123 456 789</p>
                </div>
            </div>
        </div>
        <div class="text-center py-3 border-top border-light small">
            © @DateTime.Now.Year - ITI_Project | Built with <i class="bi bi-heart-fill text-danger"></i> & Bootstrap 5
        </div>
    </footer>

    <!-- ✅ Confirm Delete Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow border-0 rounded-3">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteLabel"><i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this course? <br />
                    <span class="text-muted small">This action cannot be undone.</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger rounded-pill px-4" id="confirmDeleteButton">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // ربط زر الحذف في المودال بالنموذج الأصلي
        document.getElementById('confirmDeleteButton').addEventListener('click', function () {
            document.querySelector('.delete-form').submit();
        });
    </script>

    <!-- ✅ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- ✅ SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                        Swal.fire('Success', @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["SuccessMessage"])), 'success');
                    </text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                    <text>
                        Swal.fire('Error', @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ErrorMessage"])), 'error');
                    </text>
            }
        });
    </script>
</body>
</html>
