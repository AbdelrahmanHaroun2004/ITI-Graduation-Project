@model ITI_Project.BLL.Helpers.Pagination<ITI_Project.DAL.Models.User>
@using ITI_Project.DAL.Models.Enums
@{
    ViewData["Title"] = "User Page";

    var page = Model.PageIndex;

    var remainingItems = Model.Count - 1;


    bool currentPageWouldBeEmpty = remainingItems >= 0 && remainingItems % Model.PageSize == 0;

    if (currentPageWouldBeEmpty && !Model.HasNextPage && Model.HasPreviousPage)
    {
        page--;
    }

}

<div class="container mt-4">
    <h2 class="mb-3 text-center">👤 Users</h2>

    <form method="get" class="row mb-4 g-2 align-items-center">
        <div class="col-md-4">
            <input type="text" name="search" value="@ViewBag.search" class="form-control shadow-sm" placeholder="🔍 Search by name..." />
        </div>
        <div class="col-md-4">
            <select name="role" class="form-select shadow-sm" onchange="this.form.submit()">
                <option value="">All Roles</option>
                @foreach (var role in Enum.GetValues(typeof(UserRole)))
                {
                    <option value="@role" selected="@(ViewBag.Role != null && (UserRole)ViewBag.Role == (UserRole)role)">
                        @role
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4 text-md-end">
            <button type="submit" class="btn btn-primary me-2"><i class="bi bi-search"></i> Filter</button>
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add User</a>
        </div>
    </form>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>👤 Name</th>
                    <th>📧 Email</th>
                    <th>🎭 Role</th>
                    <th class="text-center">⚙ Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No users found.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge bg-secondary">@user.Role</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@user.UserId"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@user.UserId"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@user.UserId" asp-route-pageNumber="@(page)" method="post" class="d-inline delete-form">
                                    <button type="button"
                                            class="btn btn-sm btn-danger delete-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#confirmDeleteModal"
                                            title="Delete">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="User pagination">
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-search="@ViewBag.search" asp-route-role="@ViewBag.Role">Previous</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-search="@ViewBag.search" asp-route-role="@ViewBag.Role">@i</a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-search="@ViewBag.search" asp-route-role="@ViewBag.Role">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
