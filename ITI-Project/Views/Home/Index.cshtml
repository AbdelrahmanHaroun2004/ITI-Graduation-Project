@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container">
    <!-- Hero Section -->
    <div class="text-center my-5">
        <h1 class="display-4 fw-bold text-primary">Welcome to Training Management System</h1>
        <p class="lead text-muted">Manage Courses, Sessions, Users, and Grades efficiently.</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4 mb-5">
        <!-- Courses Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 rounded-4 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-journal-text text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">Courses</h5>
                    <p class="card-text text-muted">Add, edit, and manage training courses.</p>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-primary rounded-pill px-4">Go</a>
                </div>
            </div>
        </div>

        <!-- Sessions Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 rounded-4 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-calendar-event text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">Sessions</h5>
                    <p class="card-text text-muted">Schedule and manage course sessions.</p>
                    <a asp-controller="Session" asp-action="Index" class="btn btn-success rounded-pill px-4">Go</a>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 rounded-4 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-people text-warning" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">Users</h5>
                    <p class="card-text text-muted">Manage Admins, Instructors, and Trainees.</p>
                    <a asp-controller="User" asp-action="Index" class="btn btn-warning rounded-pill px-4 text-white">Go</a>
                </div>
            </div>
        </div>

        <!-- Grades Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 rounded-4 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line text-danger" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">Grades</h5>
                    <p class="card-text text-muted">Record and view trainee grades.</p>
                    <a asp-controller="Grade" asp-action="Index" class="btn btn-danger rounded-pill px-4">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Style -->
<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
</style>
