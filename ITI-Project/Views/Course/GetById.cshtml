@model ITI_Project.BLL.ViewModel.CourseViewModel
@{
    ViewData["Title"] = "Course Details";
}

<style>
    .detail-card {
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .detail-card:hover {
            transform: translateY(-5px) scale(1.02);
        }

    .category-badge {
        background: linear-gradient(135deg, #6c63ff, #5a52e0);
        color: white;
        border-radius: 12px;
        padding: 6px 12px;
        font-weight: 600;
        display: inline-block;
        font-size: 0.85rem;
    }

    .detail-label {
        font-weight: 600;
        color: #555;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark mb-0">
            <i class="bi bi-mortarboard-fill"></i> Course Details
        </h2>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 py-2 shadow-sm">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to Courses
        </a>
    </div>

    <div class="card detail-card p-4">
        <!-- التخصص -->
        <div class="mb-3">
            <span class="category-badge">@Model.Category</span>
        </div>

        <!-- اسم الكورس -->
        <h3 class="fw-bold text-dark mb-3">@Model.Name</h3>

        <!-- تفاصيل الكورس -->
        <div class="mb-2">
            <span class="detail-label">Course ID:</span>
            <span>@Model.CourseId</span>
        </div>

        <div class="mb-2">
            <span class="detail-label">Instructor:</span>
            <span>@Model.InstructorName</span>
        </div>

        <!-- أزرار Edit / Delete -->
        <div class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.CourseId"
               class="btn btn-warning rounded-pill px-4 py-2 shadow-sm d-flex align-items-center gap-1">
                <i class="bi bi-pencil"></i> Edit
            </a>

            <a asp-action="Delete" asp-route-id="@Model.CourseId"
               class="btn btn-danger rounded-pill px-4 py-2 shadow-sm d-flex align-items-center gap-1"
               onclick="return confirm('Are you sure you want to delete this course?');">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div>
